# ===========================================
# DealDirect Client - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Variables must be prefixed with VITE_ to be accessible in the app

# Backend API Base URL (WITHOUT trailing slash, WITHOUT /api)
# This is used for Socket.io connections and image URLs
VITE_API_BASE=https://your-backend-api-domain.com

# Backend API URL (optional - will be derived from VITE_API_BASE + /api if not set)
# Uncomment if you need to specify a different API endpoint
# VITE_API_URL=https://your-backend-api-domain.com/api

# Mapples API Key (for maps functionality)
VITE_MAPPLES_API_KEY=your-mapples-api-key
